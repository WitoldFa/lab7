<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:lab7.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="lab7.Views.MainView"
             x:DataType="vm:MainViewModel">
	<UserControl.DataContext>
		<vm:MainViewModel />
	</UserControl.DataContext>

	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Wprowadź sekwencję DNA:" FontWeight="Bold"/>
		<TextBox Text="{Binding InputSequence, Mode=TwoWay}" AcceptsReturn="True" Height="100"/>

		<Button Content="Zlicz sekwencje" Command="{Binding CountCommand}" Background="LightGreen"/>

		<TextBlock Text="Wyniki:" FontWeight="Bold"/>
		<TextBox Text="{Binding Result, Mode=OneWay}" AcceptsReturn="True" Height="200" IsReadOnly="True"/>
	</StackPanel>
</UserControl>
